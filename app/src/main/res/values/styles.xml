<resources>

    <style name="Crunchy">

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Core material theme without actionbar -->
    <style name="CoreMTRLTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Progress bar theme -->
    <style
        name="Crunchy.ProgressView.Linear.Determinate.Main"
        parent="Material.Widget.ProgressView.Linear">
        <item name="cpd_strokeColor">@color/blue_600</item>
        <item name="cpd_strokeSecondaryColor">@color/blue_500_st</item>
        <item name="android:background">@color/blue_600_t</item>
    </style>

    <style name="Button_MainStyle_Flatted" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button_ColorStyle_Flatted" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:colorBackground">@color/blue_600</item>
        <item name="android:background">@color/blue_600</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ProgressView_MainStyle_Circular" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/blue_600</item>
        <item name="cpd_strokeSize">4dp</item>
        <item name="cpd_strokeSecondaryColor">@color/blue_600_t</item>
        <item name="cpd_transformDuration">1200</item>
    </style>

    <style name="ProgressView_MainStyle_Horiz" parent="Material.Drawable.LinearProgress">
        <item name="lpd_strokeColor">@color/blue_600</item>
        <item name="lpd_strokeSecondaryColor">@color/blue_600_t</item>
    </style>

    <style name="ProgressView_MainStyle_Horiz_Determinate" parent="Material.Drawable.LinearProgress.Determinate">
        <item name="lpd_strokeColor">@color/blue_600</item>
        <item name="lpd_strokeSecondaryColor">@color/blue_600_t</item>
    </style>

    <style name="Ripple_Light" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="rd_rippleColor">@color/white_semi_transparent</item>
    </style>

    <style name="AlertDialog_AppCompat_MainStyle" parent="Base.AlertDialog.AppCompat.Light">

    </style>

    <style name="Crunchy.EditText.Main" parent="Base.Widget.AppCompat.EditText">
        <item name="android:dividerHeight">2dp</item>
        <item name="colorControlNormal">@color/grey_900</item>
        <item name="colorControlHighlight">@color/grey_800</item>
        <item name="colorControlActivated">@color/blue_600</item>
    </style>

    <style name="AlertDialogBlueRipple" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_600</item>
        <item name="colorControlActivated">@color/blue_500</item>
        <item name="colorControlHighlight">@color/blue_600</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

</resources>
